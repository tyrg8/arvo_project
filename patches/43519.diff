         ip += 2;
         int i, j;
         if (token == 128) {
           i = 2;
           j = 3;
         } else {
           i = (token - 128) >> 5U;
           j = ((token - 128) >> 3U) - (i << 2U);
         }
         memcpy(&buffercpy[i * 4], ip - offset, 4);
         memcpy(&buffercpy[j * 4], ip - offset + 4, 4);
         for (int k = 0; k < 4; k++) {
