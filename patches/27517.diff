     }
 
     //! Get the number of vertex color channels the mesh contains
     unsigned int GetNumColorChannels() const {
         unsigned int n(0);
         while (n < AI_MAX_NUMBER_OF_COLOR_SETS && mColors[n]) {
             ++n;
         }
         return n;
     }
 
