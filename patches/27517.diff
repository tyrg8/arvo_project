             // and call the same function we used for loading MDL5 files
 
             pcNew->mWidth = iWidth;
             pcNew->mHeight = iHeight;
 
             unsigned int iSkip = 0;
             ParseTextureColorData(szCurrent, iMasked, &iSkip, pcNew.get());
 
